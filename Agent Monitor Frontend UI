<script>
/* === FRAKCI√ì DEFIN√çCI√ì === */
const FRACTIONS = [
  { name:"OPS", icon:"üõ†Ô∏è", skills:["LatencyFix","PipelineTune","AutoPatch"] },
  { name:"SYNC", icon:"üîÑ", skills:["RepoSync","Base44Sync","MeshAlign"] },
  { name:"INTEL", icon:"üß†", skills:["AnomalyDetect","Forecast","AIReason"] },
  { name:"DEFENSE", icon:"üõ°Ô∏è", skills:["RateShield","FailoverPrep","AutoRecover"] },
  { name:"BUILDER", icon:"üèóÔ∏è", skills:["ModuleGen","Refactor","AutoDeploy"] },
  { name:"FIXER", icon:"üîß", skills:["ErrorFix","HotPatch","Rollback"] }
];

/* === RENDER FRACTIONS === */
const factionWrap = document.getElementById("factions");

FRACTIONS.forEach(f=>{
  const d=document.createElement("div");
  d.className="faction";
  d.innerHTML=`
    <div class="f-icon">${f.icon}</div>
    <div class="f-name">${f.name}</div>
  `;
  d.onclick=()=>selectFaction(f);
  factionWrap.appendChild(d);
});

let SELECTED = FRACTIONS[0];

/* === AGENT TABLE === */
const tableBody = document.querySelector("#agent-table tbody");

function addAgentClone(name, fraction, skill) {
  const row = document.createElement("tr");
  const status = ["good","warn","bad"][Math.floor(Math.random()*3)];
  row.innerHTML=`
    <td>${name}</td>
    <td>${fraction}</td>
    <td>${skill}</td>
    <td><span class="pill ${status}">${status==="good"?"OK":status==="warn"?"FIGYEL":"HIBA"}</span></td>
  `;
  tableBody.appendChild(row);
  pushToSwarm();
}

/* === SPAWN button === */
document.getElementById("spawn").onclick = ()=>{
  const f = SELECTED;
  const skill = f.skills[Math.floor(Math.random()*f.skills.length)];
  const agentName = f.name+"-A"+Math.floor(Math.random()*999);
  addAgentClone(agentName, f.name, skill);
};

/* === FRACTION SELECT === */
function selectFaction(f){
  SELECTED = f;
}

/* === SWARM RENDERER === */
const swarm = document.getElementById("swarm");

function pushToSwarm(){
  const node = document.createElement("div");
  node.className="node";
  node.style.left = Math.random()*90+"%";
  node.style.top = Math.random()*90+"%";
  swarm.appendChild(node);

  // animate random movement
  setInterval(()=>{
    node.style.transform=`translate(${(Math.random()*50)-25}px, ${(Math.random()*50)-25}px)`;
  },1500);
}

// random initial swarm
for(let i=0;i<18;i++) pushToSwarm();

</script>
