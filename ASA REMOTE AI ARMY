    let activeFactionFilter = "all";
    let activeStatusFilter = "all";

    const agentGrid = document.getElementById("agentGrid");
    const agentCountBadge = document.getElementById("agentCountBadge");

    function createSkillRow(label, value) {
      return `
        <div class="skill-row">
          <div class="skill-label-row">
            <strong>${label}</strong>
            <span>${value}</span>
          </div>
          <div class="skill-bar">
            <div class="skill-bar-fill" style="width:${value}%;"></div>
          </div>
        </div>
      `;
    }

    function createAgentCard(agent) {
      // Build skill rows
      const skillsHTML = `
        ${createSkillRow("Recon", agent.skills.recon)}
        ${createSkillRow("Ops", agent.skills.ops)}
        ${createSkillRow("Tactics", agent.skills.tactics)}
        ${createSkillRow("Engineering", agent.skills.engineering)}
      `;

      const statusLabelMap = {
        online: "Online",
        mission: "On Mission",
        cooldown: "Cooldown",
        offline: "Offline"
      };

      const clonesVisual = Array.from({ length: agent.clones }).map((_, idx) => {
        const ghost = idx >= Math.max(agent.clones - 2, 0);
        return `<div class="clone-circle ${ghost ? "clone-ghost" : ""}"></div>`;
      }).join("");

      return `
        <article class="agent-card" data-faction="${agent.faction}" data-status="${agent.status}">
          <div class="agent-card-header">
            <div class="agent-meta">
              <div class="agent-name">${agent.name}</div>
              <div class="agent-id">${agent.id} · ${agent.rank}</div>
            </div>
            <div class="agent-tags">
              <div class="faction-pill" data-faction="${agent.faction}">
                ${agent.faction}
              </div>
              <div class="status-pill-mini" data-status="${agent.status}">
                ${statusLabelMap[agent.status] || agent.status}
              </div>
            </div>
          </div>
          <div class="agent-body">
            <div class="skill-block">
              ${skillsHTML}
            </div>
            <div class="agent-meta-right">
              <div class="clone-row">
                <span>Mission-ready clones</span>
                <span>${agent.clones}</span>
              </div>
              <div class="clone-avatars">
                ${clonesVisual}
              </div>
              <div class="sparkline">
                <div class="sparkline-line"></div>
                <div class="sparkline-wave" style="animation-duration:${2.4 + (100 - agent.load) / 80}s;"></div>
                <div class="sparkline-meta">
                  <span>Load index</span>
                  <span>${agent.load}%</span>
                </div>
              </div>
            </div>
          </div>
        </article>
      `;
    }

    function renderAgents() {
      const filtered = agents.filter(a => {
        const factionOk = activeFactionFilter === "all" || a.faction === activeFactionFilter;
        const statusOk = activeStatusFilter === "all" || a.status === activeStatusFilter;
        return factionOk && statusOk;
      });

      agentGrid.innerHTML = filtered.map(createAgentCard).join("");
      agentCountBadge.textContent = `${filtered.length} Agents`;
      update
