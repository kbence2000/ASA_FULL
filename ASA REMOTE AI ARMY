  <script>
    // === Tiny mock logic to make the dashboard feel "alive" ===

    const activityList = document.getElementById("activity-list");
    const terminalBody = document.getElementById("terminal-body");
    const terminalInput = document.getElementById("terminal-input");
    const latencyLabel = document.getElementById("latency-label");
    const syncHorizonLabel = document.getElementById("sync-horizon-label");
    const storageLabel = document.getElementById("storage-label");
    const activityBadge = document.getElementById("activity-badge");
    const quickSyncButton = document.getElementById("action-quick-sync");

    const activityPresets = [
      { type: "sync", msg: "GitHub repo mirror check", target: "ASA / tac" },
      { type: "sync", msg: "Base44 app manifest poll", target: "ASA layer" },
      { type: "ops", msg: "CF Worker heartbeat", target: "omni-bridge" },
      { type: "ops", msg: "Latency probe", target: "multi-sync mesh" },
      { type: "ai", msg: "GPT-5.1 diff suggestion queued", target: "AAAN agent" },
      { type: "ai", msg: "Anomaly window recomputed", target: "telemetry" },
    ];

    function pushActivity(item) {
      const row = document.createElement("div");
      row.className = "activity-item";

      const dot = document.createElement("span");
      dot.className = "activity-dot";

      const text = document.createElement("div");
      text.className = "activity-meta";
      text.innerHTML = `<strong>${item.msg}</strong> ¬∑ ${item.target}`;

      row.appendChild(dot);
      row.appendChild(text);
      activityList.prepend(row);

      // limit
      const maxItems = 12;
      while (activityList.children.length > maxItems) {
        activityList.removeChild(activityList.lastChild);
      }
    }

    function pushTerminalLine(text, opts = {}) {
      const line = document.createElement("div");
      line.className = "terminal-line";
      if (opts.type === "cmd") {
        line.innerHTML = `<span class="prompt">omniÔ¨Çux:~$</span> ${text}`;
      } else if (opts.dim) {
        line.innerHTML = `<span class="dim">${text}</span>`;
      } else {
        line.textContent = text;
      }
      terminalBody.appendChild(line);
      terminalBody.scrollTop = terminalBody.scrollHeight;
    }

    // Simulated live metrics
    let latency = 18;
    let storage = 12.3;
    let syncTargets = 3;

    setInterval(() => {
      const jitter = (Math.random() - 0.5) * 4;
      latency = Math.max(8, Math.min(40, latency + jitter));
      latencyLabel.textContent = latency.toFixed(0);

      const storageDelta = (Math.random() - 0.7) * 0.3;
      storage = Math.max(5, Math.min(70, storage + storageDelta));
      storageLabel.textContent = storage.toFixed(1) + "%";

      const dir = Math.random() > 0.5 ? 1 : -1;
      syncTargets = Math.max(1, Math.min(6, syncTargets + dir));
      syncHorizonLabel.textContent = syncTargets + " targets";
    }, 2400);

    // Activity ticker
    setInterval(() => {
      const preset = activityPresets[Math.floor(Math.random() * activityPresets.length)];
      pushActivity(preset);
    }, 3200);

    // Terminal commands
    terminalInput.addEventListener("keydown", (e) => {
      if (e.key === "Enter") {
        const value = terminalInput.value.trim();
        if (!value) return;
        pushTerminalLine(value, { type: "cmd" });
        handleCommand(value);
        terminalInput.value = "";
      }
    });

    function handleCommand(cmd) {
      const lower = cmd.toLowerCase();
      if (lower === "status") {
        pushTerminalLine("[status] omniÔ¨Çux: all bridges nominal; simulated mode active.", {
          dim: true,
        });
      } else if (lower.startsWith("sync")) {
        pushTerminalLine("[sync] triggering simulated multi-sync pipeline‚Ä¶", { dim: true });
        pushActivity({
          type: "sync",
          msg: "Manual sync triggered",
          target: "OmniFlux CLI",
        });
      } else if (lower === "help") {
        pushTerminalLine(
          "[help] commands: status ¬∑ sync --all ¬∑ clear ¬∑ help",
          { dim: true }
        );
      } else if (lower === "clear") {
        terminalBody.innerHTML = "";
      } else {
        pushTerminalLine(`[warn] unknown command: ${cmd}`, { dim: true });
      }
    }

    // Quick Sync button
    quickSyncButton.addEventListener("click", () => {
      pushTerminalLine("sync --all", { type: "cmd" });
      pushTerminalLine("[sync] OmniFlux will sync all attached targets (mock).", {
        dim: true,
      });
      pushActivity({
        type: "sync",
        msg: "Quick Sync executed",
        target: "Topbar action",
      });
      activityBadge.textContent = "Simulated ¬∑ QuickSync";
    });
  </script>
</body>
