import React, { useState, useEffect } from 'react';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { base44 } from '@/api/base44Client';
import { Card } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Badge } from '@/components/ui/badge';
import { Brain, Sparkles, Search, Clock, Tag } from 'lucide-react';
import { toast } from 'sonner';

export default function CognitiveMemory() {
  const [input, setInput] = useState('');
  const [queryInput, setQueryInput] = useState('');
  const [terminal, setTerminal] = useState([]);
  const [context, setContext] = useState('');
  const queryClient = useQueryClient();

  const { data: user } = useQuery({
    queryKey: ['currentUser'],
    queryFn: () => base44.auth.me(),
  });

  const userId = user?.email || 'demo-user';

  const { data: memories = [] } = useQuery({
    queryKey: ['memories', userId],
    queryFn: () => base44.entities.MemoryItem.filter({ userId }, '-updated_date', 300),
    enabled: !!userId,
    refetchInterval: 5000,
  });

  const ingestMutation = useMutation({
    mutationFn: async (content) => {
      addTerminalLine(`user> ${content}`, 'user');
      
      const classification = await base44.integrations.Core.InvokeLLM({
        prompt: `Klasszifik√°ld ezt az √ºzenetet mem√≥ria szempontj√°b√≥l. V√°laszolj STRICT JSON-ben:\n{\n  "kind": "FACT | PREFERENCE | TASK | INSIGHT | OTHER",\n  "importance": 0..1,\n  "tags": ["tag1", "tag2"]\n}\n\n√úzenet: ${content}`,
        response_json_schema: {
          type: 'object',
          properties: {
            kind: { type: 'string' },
            importance: { type: 'number' },
            tags: { type: 'array', items: { type: 'string' } }
          }
        }
      });

      const importance = Math.max(0, Math.min(1, classification.importance || 0));
      
      if (importance < 0.15) {
        addTerminalLine('cme#ingest ¬∑ skip (nem el√©g fontos)', 'engine');
        return null;
      }

      const memory = await base44.entities.MemoryItem.create({
        userId,
        kind: classification.kind || 'OTHER',
        importance,
        recencyScore: 1.0,
        source: 'user',
        content,
        tags: classification.tags || [],
        meta: { source: 'ASA-terminal' }
      });

      addTerminalLine(`cme#ingest ‚úî kind=${memory.kind} imp=${importance.toFixed(2)}`, 'engine');
      return memory;
    },
    onSuccess: () => {
      queryClient.invalidateQueries(['memories']);
      setInput('');
    },
    onError: (err) => {
      addTerminalLine(`cme#error: ${err.message}`, 'system');
      toast.error('Memory ingest failed');
    }
  });

  const queryMemories = async (query) => {
    if (!query.trim()) {
      setContext('√çrj egy k√©rd√©st vagy t√©m√°t, √©s megkapod a mem√≥ri√°b√≥l √©p√≠tett kontextust.');
      return;
    }

    const relevantMemories = memories
      .slice(0, 10)
      .sort((a, b) => (b.importance * 0.5 + b.recencyScore * 0.5) - (a.importance * 0.5 + a.recencyScore * 0.5));

    const lines = relevantMemories.map((m) => {
      const ts = new Date(m.updated_date).toISOString();
      return `- [${m.kind}] (imp=${m.importance.toFixed(2)}, rec=${m.recencyScore.toFixed(2)}) @${ts} :: ${m.content}`;
    });

    setContext(lines.join('\n') || 'Nincs relev√°ns mem√≥ria.');
  };

  const addTerminalLine = (text, type = 'system') => {
    setTerminal(prev => [...prev, { text, type, ts: Date.now() }]);
  };

  useEffect(() => {
    const interval = setInterval(() => {
      if (memories.length > 0) {
        memories.forEach(async (mem) => {
          const minutesSinceUpdate = (Date.now() - new Date(mem.updated_date).getTime()) / 60000;
          const decaySteps = minutesSinceUpdate / 10;
          const newScore = Math.max(0, mem.recencyScore - (0.02 * decaySteps));
          
          if (newScore !== mem.recencyScore) {
            await base44.entities.MemoryItem.update(mem.id, { recencyScore: newScore });
          }
        });
        queryClient.invalidateQueries(['memories']);
      }
    }, 60000);

    return () => clearInterval(interval);
  }, [memories]);

  const avgImportance = memories.length > 0 
    ? (memories.reduce((s, m) => s + m.importance, 0) / memories.length).toFixed(2)
    : '0.00';

  const lastUpdate = memories.length > 0
    ? new Date(Math.max(...memories.map(m => new Date(m.updated_date).getTime()))).toLocaleTimeString()
    : '‚Äì';

  const demoChips = [
    { icon: 'üé®', label: 'Sz√≠npreferencia', text: 'Szeretem a lila-fekete sz√≠nvil√°got az appokban.' },
    { icon: 'üì±', label: 'Mobil-first', text: 'Mindig mobilr√≥l haszn√°lom az ASA panelt, fontos a mobile-first UX.' },
    { icon: 'üß†', label: 'F≈ë projekt', text: 'A f≈ë projektem a TAC/ASA AI OPS platform, erre f√≥kusz√°lj.' },
  ];

  return (
    <div className="max-w-[1120px] mx-auto space-y-4">
      <div className="flex items-center justify-between gap-4 flex-wrap">
        <div className="flex items-center gap-3">
          <div className="w-12 h-12 rounded-2xl bg-gradient-to-br from-cyan-400 to-indigo-600 flex items-center justify-center animate-pulse">
            <Brain className="w-7 h-7 text-white" />
          </div>
          <div>
            <div className="text-xs uppercase text-slate-400 tracking-wider">ASA Cognitive Stack</div>
            <h1 className="text-2xl font-semibold text-white">CME ¬∑ Cognitive Memory Engine</h1>
          </div>
        </div>
        <div className="flex flex-col items-end gap-2">
          <div className="px-3 py-1 rounded-full bg-slate-900 border border-slate-700 flex items-center gap-2 text-xs">
            <div className="w-2 h-2 rounded-full bg-green-400 animate-pulse" />
            <span>LIVE ¬∑ ChatGPT backend-ready</span>
          </div>
          <div className="text-xs text-slate-500">User ID: {userId}</div>
        </div>
      </div>

      <div className="grid grid-cols-1 lg:grid-cols-2 gap-4">
        <Card className="bg-gradient-to-br from-slate-900/95 to-slate-900/90 border-slate-800 p-4">
          <div className="flex items-center justify-between mb-3">
            <div className="text-xs uppercase text-slate-400 tracking-wider">Interaction ¬∑ ASA Streaming Terminal</div>
            <Badge className="bg-cyan-500/10 text-cyan-400 border-cyan-500/30">
              <Sparkles className="w-3 h-3 mr-1" />
              Ingest & Query
            </Badge>
          </div>

          <div className="bg-black/50 border border-slate-800 rounded-xl p-3 h-[280px] overflow-y-auto mb-3 font-mono text-xs">
            <div className="flex items-center justify-between mb-2 pb-2 border-b border-slate-800">
              <div className="flex gap-1.5">
                <div className="w-2 h-2 rounded-full bg-red-500" />
                <div className="w-2 h-2 rounded-full bg-yellow-500" />
                <div className="w-2 h-2 rounded-full bg-green-500" />
              </div>
              <div className="text-slate-600">/asa/cme ¬∑ streaming</div>
            </div>
            {terminal.length === 0 && (
              <div className="text-slate-600 text-center mt-20">
                <div className="text-3xl mb-2">‚ö°</div>
                <div>Terminal ready. Type to start.</div>
              </div>
            )}
            {terminal.map((line, idx) => (
              <div key={idx} className={`py-1 ${
                line.type === 'user' ? 'text-slate-200' : 
                line.type === 'engine' ? 'text-cyan-400' : 
                'text-slate-500'
              }`}>
                {line.text}
              </div>
            ))}
          </div>

          <div className="flex gap-2 mb-3">
            <Input
              value={input}
              onChange={(e) => setInput(e.target.value)}
              onKeyPress={(e) => e.key === 'Enter' && ingestMutation.mutate(input)}
              placeholder="√çrj valamit, amit a rendszer megjegyezhet..."
              disabled={ingestMutation.isPending}
              className="bg-slate-900 border-slate-700 text-sm"
            />
            <Button
              onClick={() => ingestMutation.mutate(input)}
              disabled={!input.trim() || ingestMutation.isPending}
              className="bg-gradient-to-r from-indigo-600 to-cyan-500"
            >
              Ingest ‚èé
            </Button>
          </div>

          <div className="flex gap-2 flex-wrap mb-3">
            {demoChips.map((chip, idx) => (
              <button
                key={idx}
                onClick={() => setInput(chip.text)}
                className="px-2 py-1 text-xs rounded-full border border-slate-700 hover:border-slate-600 bg-slate-900 hover:bg-slate-800 transition-colors"
              >
                {chip.icon} {chip.label}
              </button>
            ))}
          </div>

          <div className="grid grid-cols-3 gap-2 text-xs">
            <div className="bg-slate-900 border border-slate-800 rounded-lg p-2">
              <div className="text-slate-500 mb-1">Mem√≥ria darabok</div>
              <div className="text-base font-semibold">{memories.length}</div>
            </div>
            <div className="bg-slate-900 border border-slate-800 rounded-lg p-2">
              <div className="text-slate-500 mb-1">√Åtlag fontoss√°g</div>
              <div className="text-base font-semibold">{avgImportance}</div>
            </div>
            <div className="bg-slate-900 border border-slate-800 rounded-lg p-2">
              <div className="text-slate-500 mb-1">Utols√≥ update</div>
              <div className="text-base font-semibold">{lastUpdate}</div>
            </div>
          </div>
        </Card>

        <Card className="bg-gradient-to-br from-slate-900/95 to-slate-900/90 border-slate-800 p-4">
          <div className="flex items-center justify-between mb-3">
            <div className="text-xs uppercase text-slate-400 tracking-wider">Cognitive State ¬∑ Memory Graph</div>
            <Badge className="bg-cyan-500/10 text-cyan-400 border-cyan-500/30">
              <Brain className="w-3 h-3 mr-1" />
              Live overview
            </Badge>
          </div>

          <div className="flex items-center gap-2 mb-3">
            <div className="px-2 py-1 rounded-full bg-slate-900 border border-slate-700 flex items-center gap-2 text-xs">
              <div className="w-1.5 h-1.5 rounded-full bg-green-400" />
              Long-term memory store
            </div>
            <Input
              value={queryInput}
              onChange={(e) => setQueryInput(e.target.value)}
              onKeyPress={(e) => e.key === 'Enter' && queryMemories(queryInput)}
              placeholder="Context lek√©rdez√©s..."
              className="bg-slate-900 border-slate-700 text-xs"
            />
          </div>

          <div className="space-y-2 max-h-[210px] overflow-y-auto mb-3">
            {memories.slice().sort((a, b) => new Date(b.updated_date) - new Date(a.updated_date)).map((mem) => (
              <div key={mem.id} className="bg-slate-900 border border-slate-800 rounded-lg p-2 text-xs">
                <div className="flex items-center justify-between mb-1">
                  <div className="text-slate-500">{new Date(mem.updated_date).toLocaleTimeString()}</div>
                  <div className="text-slate-500 uppercase">{mem.kind}</div>
                </div>
                <div className="text-slate-200 mb-1">{mem.content}</div>
                <div className="text-slate-500 text-[10px] mb-1">
                  imp={mem.importance.toFixed(2)} ¬∑ rec={mem.recencyScore.toFixed(2)} ¬∑ src={mem.source}
                </div>
                {mem.tags?.length > 0 && (
                  <div className="flex gap-1 flex-wrap">
                    {mem.tags.map((tag, idx) => (
                      <span key={idx} className="px-1.5 py-0.5 rounded-full bg-cyan-500/10 border border-cyan-500/30 text-cyan-400 text-[10px]">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            ))}
            {memories.length === 0 && (
              <div className="text-slate-500 text-center py-8 text-xs">
                M√©g nincsenek mem√≥ri√°k. Kezdj el √≠rni!
              </div>
            )}
          </div>

          <div className="bg-slate-900 border border-dashed border-slate-700 rounded-lg p-3 max-h-[140px] overflow-y-auto font-mono text-[10px] text-slate-400">
            {context || '√çrj egy k√©rd√©st vagy t√©m√°t a fenti mez≈ëbe, √©s megkapod a mem√≥ri√°b√≥l √©p√≠tett kontextust.'}
          </div>
        </Card>
      </div>
    </div>
  );
}
