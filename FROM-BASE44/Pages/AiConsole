import React, { useState, useRef, useEffect } from 'react';
import { base44 } from '@/api/base44Client';
import { Card } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Textarea } from '@/components/ui/textarea';
import { Badge } from '@/components/ui/badge';
import { Sparkles, Send, Loader2, Brain, Zap, Circle, Upload, X } from 'lucide-react';
import ReactMarkdown from 'react-markdown';
import { Switch } from '@/components/ui/switch';
import { Label } from '@/components/ui/label';

export default function AIConsole() {
  const [messages, setMessages] = useState([]);
  const [input, setInput] = useState('');
  const [loading, setLoading] = useState(false);
  const [webSearch, setWebSearch] = useState(false);
  const [files, setFiles] = useState([]);
  const messagesEndRef = useRef(null);
  const fileInputRef = useRef(null);

  const scrollToBottom = () => {
    messagesEndRef.current?.scrollIntoView({ behavior: 'smooth' });
  };

  useEffect(() => {
    scrollToBottom();
  }, [messages]);

  const handleFileUpload = async (e) => {
    const uploadedFiles = Array.from(e.target.files);
    const uploadPromises = uploadedFiles.map(async (file) => {
      const formData = new FormData();
      formData.append('file', file);
      const result = await base44.integrations.Core.UploadFile({ file });
      return { name: file.name, url: result.file_url };
    });

    const uploaded = await Promise.all(uploadPromises);
    setFiles([...files, ...uploaded]);
  };

  const removeFile = (index) => {
    setFiles(files.filter((_, i) => i !== index));
  };

  const sendMessage = async () => {
    if (!input.trim() && files.length === 0) return;

    const userMessage = {
      role: 'user',
      content: input,
      files: files.length > 0 ? files : null,
    };

    setMessages([...messages, userMessage]);
    setInput('');
    setLoading(true);

    try {
      const response = await base44.integrations.Core.InvokeLLM({
        prompt: input,
        add_context_from_internet: webSearch,
        file_urls: files.length > 0 ? files.map(f => f.url) : undefined,
      });

      setMessages(prev => [...prev, {
        role: 'assistant',
        content: response,
      }]);
      setFiles([]);
    } catch (error) {
      setMessages(prev => [...prev, {
        role: 'error',
        content: 'Error: ' + error.message,
      }]);
    } finally {
      setLoading(false);
    }
  };

  const handleKeyPress = (e) => {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      sendMessage();
    }
  };

  return (
    <div className="h-[calc(100vh-120px)] flex flex-col">
      {/* Header */}
      <div className="flex items-center justify-between mb-6">
        <div>
          <h1 className="text-4xl font-bold text-white mb-2 glow-text">AI Console</h1>
          <p className="text-slate-400">Powered by OpenAI's most advanced models</p>
        </div>
        <div className="flex items-center gap-2 px-4 py-2 rounded-lg bg-gradient-to-r from-purple-500/20 to-pink-500/20 border border-purple-500/30">
          <Brain className="w-5 h-5 text-purple-400 heartbeat" />
          <span className="text-sm font-medium text-white">GPT-4 Active</span>
        </div>
      </div>

      {/* Chat Container */}
      <Card className="flex-1 bg-slate-900/50 border-slate-800 backdrop-blur-sm flex flex-col overflow-hidden">
        {/* Messages */}
        <div className="flex-1 overflow-y-auto p-4 lg:p-6 space-y-4">
          {messages.length === 0 ? (
            <div className="h-full flex items-center justify-center">
              <div className="text-center max-w-2xl">
                <Sparkles className="w-16 h-16 text-purple-400 mx-auto mb-4 heartbeat" />
                <h2 className="text-2xl font-bold text-white mb-2">Ready to assist you</h2>
                <p className="text-slate-400 mb-6">
                  Ask me anything. I can help with code, analysis, research, and creative tasks.
                </p>
                <div className="grid grid-cols-1 md:grid-cols-2 gap-3">
                  {[
                    'Analyze this system architecture',
                    'Debug my code issue',
                    'Research latest AI trends',
                    'Generate a creative solution',
                  ].map((suggestion, idx) => (
                    <button
                      key={idx}
                      onClick={() => setInput(suggestion)}
                      className="p-3 rounded-lg bg-slate-800/50 border border-slate-700/50 hover:border-purple-500/50 transition-all text-sm text-slate-300 hover:text-white text-left"
                    >
                      {suggestion}
                    </button>
                  ))}
                </div>
              </div>
            </div>
          ) : (
            <>
              {messages.map((message, idx) => (
                <div key={idx} className={`flex ${message.role === 'user' ? 'justify-end' : 'justify-start'}`}>
                  <div className={`max-w-[85%] ${message.role === 'user' ? 'ml-auto' : 'mr-auto'}`}>
                    {message.role === 'user' ? (
                      <div className="rounded-2xl px-4 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white">
                        <p className="text-sm leading-relaxed whitespace-pre-wrap">{message.content}</p>
                        {message.files && message.files.length > 0 && (
                          <div className="mt-2 space-y-1">
                            {message.files.map((file, i) => (
                              <div key={i} className="text-xs bg-white/10 rounded px-2 py-1 inline-block mr-2">
                                ðŸ“Ž {file.name}
                              </div>
                            ))}
                          </div>
                        )}
                      </div>
                    ) : message.role === 'error' ? (
                      <div className="rounded-2xl px-4 py-3 bg-red-500/10 border border-red-500/30 text-red-300">
                        <p className="text-sm">{message.content}</p>
                      </div>
                    ) : (
                      <div className="rounded-2xl px-4 py-3 bg-slate-800/80 border border-slate-700/50">
                        <ReactMarkdown 
                          className="text-sm prose prose-sm prose-invert max-w-none [&>*:first-child]:mt-0 [&>*:last-child]:mb-0"
                          components={{
                            code: ({ inline, className, children, ...props }) => {
                              return !inline ? (
                                <pre className="bg-slate-950 rounded-lg p-3 overflow-x-auto my-2 border border-slate-700">
                                  <code className="text-xs text-slate-300" {...props}>{children}</code>
                                </pre>
                              ) : (
                                <code className="px-1.5 py-0.5 rounded bg-slate-700 text-purple-300 text-xs">
                                  {children}
                                </code>
                              );
                            },
                            p: ({ children }) => <p className="my-2 leading-relaxed text-slate-200">{children}</p>,
                            ul: ({ children }) => <ul className="my-2 ml-4 list-disc text-slate-200">{children}</ul>,
                            ol: ({ children }) => <ol className="my-2 ml-4 list-decimal text-slate-200">{children}</ol>,
                            li: ({ children }) => <li className="my-1 text-slate-200">{children}</li>,
                            h1: ({ children }) => <h1 className="text-xl font-bold my-3 text-white">{children}</h1>,
                            h2: ({ children }) => <h2 className="text-lg font-bold my-2 text-white">{children}</h2>,
                            h3: ({ children }) => <h3 className="text-base font-bold my-2 text-white">{children}</h3>,
                          }}
                        >
                          {message.content}
                        </ReactMarkdown>
                      </div>
                    )}
                  </div>
                </div>
              ))}
              {loading && (
                <div className="flex justify-start">
                  <div className="rounded-2xl px-4 py-3 bg-slate-800/80 border border-slate-700/50">
                    <Loader2 className="w-5 h-5 text-purple-400 animate-spin" />
                  </div>
                </div>
              )}
              <div ref={messagesEndRef} />
            </>
          )}
        </div>

        {/* Input Area */}
        <div className="border-t border-slate-800 p-4">
          {/* Files Preview */}
          {files.length > 0 && (
            <div className="mb-3 flex flex-wrap gap-2">
              {files.map((file, idx) => (
                <div key={idx} className="flex items-center gap-2 px-3 py-1.5 rounded-lg bg-purple-500/10 border border-purple-500/30">
                  <span className="text-xs text-purple-300">ðŸ“Ž {file.name}</span>
                  <button onClick={() => removeFile(idx)} className="text-purple-400 hover:text-purple-300">
                    <X className="w-3 h-3" />
                  </button>
                </div>
              ))}
            </div>
          )}

          {/* Controls */}
          <div className="flex items-center gap-3 mb-3">
            <div className="flex items-center gap-2">
              <Switch id="web-search" checked={webSearch} onCheckedChange={setWebSearch} />
              <Label htmlFor="web-search" className="text-sm text-slate-400 cursor-pointer">
                Web Search
              </Label>
            </div>
            <input
              ref={fileInputRef}
              type="file"
              multiple
              onChange={handleFileUpload}
              className="hidden"
            />
            <Button
              variant="outline"
              size="sm"
              onClick={() => fileInputRef.current?.click()}
              className="border-slate-700 text-slate-300 hover:text-white"
            >
              <Upload className="w-4 h-4 mr-2" />
              Upload
            </Button>
          </div>

          {/* Input */}
          <div className="flex gap-2">
            <Textarea
              value={input}
              onChange={(e) => setInput(e.target.value)}
              onKeyDown={handleKeyPress}
              placeholder="Ask anything..."
              className="flex-1 bg-slate-800 border-slate-700 text-white resize-none min-h-[60px] max-h-[200px]"
              disabled={loading}
            />
            <Button
              onClick={sendMessage}
              disabled={loading || (!input.trim() && files.length === 0)}
              className="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 px-6"
            >
              {loading ? (
                <Loader2 className="w-5 h-5 animate-spin" />
              ) : (
                <Send className="w-5 h-5" />
              )}
            </Button>
          </div>
        </div>
      </Card>

      {/* Stats */}
      <div className="grid grid-cols-3 gap-3 mt-4">
        <Card className="bg-slate-900/50 border-slate-800 p-3">
          <div className="flex items-center gap-2">
            <Circle className="w-2 h-2 text-purple-400 fill-purple-400 pulse-dot" />
            <span className="text-xs text-slate-400">Model: GPT-4 Turbo</span>
          </div>
        </Card>
        <Card className="bg-slate-900/50 border-slate-800 p-3">
          <div className="flex items-center gap-2">
            <Zap className="w-3 h-3 text-cyan-400" />
            <span className="text-xs text-slate-400">Context: 128K tokens</span>
          </div>
        </Card>
        <Card className="bg-slate-900/50 border-slate-800 p-3">
          <div className="flex items-center gap-2">
            <Brain className="w-3 h-3 text-green-400" />
            <span className="text-xs text-slate-400">Status: Ready</span>
          </div>
        </Card>
      </div>
    </div>
  );
}
