import React, { useState } from 'react';
import { Card } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Tabs, TabsList, TabsTrigger, TabsContent } from '@/components/ui/tabs';
import CodeEditor from '../components/dev/CodeEditor';
import AIAssistant from '../components/dev/AIAssistant';
import FileExplorer from '../components/dev/FileExplorer';
import Terminal from '../components/dev/Terminal';
import GitPanel from '../components/dev/GitPanel';
import GitHubSync from '../components/dev/GitHubSync';
import CloudflareSync from '../components/dev/CloudflareSync';
import { Code2, Sparkles, FolderTree, Terminal as TerminalIcon, GitBranch, Play, Bug, TestTube, Rocket, Github } from 'lucide-react';

export default function DevEnvironment() {
  const [activeFile, setActiveFile] = useState('main.py');
  const [code, setCode] = useState('# Welcome to Elite Dev Environment\n# AI-powered full-stack development\n\nprint("Hello, Almighty System!")');
  const [mobileView, setMobileView] = useState('editor');

  return (
    <div className="h-[calc(100vh-80px)] md:h-[calc(100vh-120px)] flex flex-col safe-area-bottom">
      {/* Header */}
      <div className="flex flex-col md:flex-row md:items-center justify-between mb-3 md:mb-4 gap-3">
        <div>
          <h1 className="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-1 md:mb-2 glow-text">Elite Dev Environment</h1>
          <p className="text-slate-400 text-xs md:text-sm">AI-powered full-stack development suite</p>
        </div>
        <div className="flex gap-1.5 md:gap-2 overflow-x-auto pb-2 md:pb-0 no-scrollbar">
          <Button size="sm" className="bg-green-600 hover:bg-green-700 flex-shrink-0">
            <Play className="w-3 h-3 md:w-4 md:h-4 md:mr-2" />
            <span className="hidden md:inline">Run</span>
          </Button>
          <Button size="sm" variant="outline" className="border-slate-700 flex-shrink-0">
            <Bug className="w-3 h-3 md:w-4 md:h-4 md:mr-2" />
            <span className="hidden md:inline">Debug</span>
          </Button>
          <Button size="sm" variant="outline" className="border-slate-700 flex-shrink-0 hidden md:flex">
            <TestTube className="w-4 h-4 mr-2" />
            Test
          </Button>
          <Button size="sm" className="bg-gradient-to-r from-purple-600 to-pink-600 flex-shrink-0">
            <Rocket className="w-3 h-3 md:w-4 md:h-4 md:mr-2" />
            <span className="hidden md:inline">Deploy</span>
          </Button>
        </div>
      </div>

      {/* Mobile Bottom Navigation */}
      <div className="lg:hidden mb-3">
        <div className="flex gap-2 overflow-x-auto pb-2 no-scrollbar">
          <Button 
            size="sm" 
            variant={mobileView === 'files' ? 'default' : 'outline'}
            onClick={() => setMobileView('files')}
            className="flex-shrink-0 text-xs"
          >
            <FolderTree className="w-3 h-3 mr-1" />
            Files
          </Button>
          <Button 
            size="sm" 
            variant={mobileView === 'editor' ? 'default' : 'outline'}
            onClick={() => setMobileView('editor')}
            className="flex-shrink-0 text-xs"
          >
            <Code2 className="w-3 h-3 mr-1" />
            Editor
          </Button>
          <Button 
            size="sm" 
            variant={mobileView === 'terminal' ? 'default' : 'outline'}
            onClick={() => setMobileView('terminal')}
            className="flex-shrink-0 text-xs"
          >
            <TerminalIcon className="w-3 h-3 mr-1" />
            Terminal
          </Button>
          <Button 
            size="sm" 
            variant={mobileView === 'ai' ? 'default' : 'outline'}
            onClick={() => setMobileView('ai')}
            className="flex-shrink-0 text-xs"
          >
            <Sparkles className="w-3 h-3 mr-1" />
            AI
          </Button>
          <Button 
            size="sm" 
            variant={mobileView === 'sync' ? 'default' : 'outline'}
            onClick={() => setMobileView('sync')}
            className="flex-shrink-0 text-xs"
          >
            <Github className="w-3 h-3 mr-1" />
            Sync
          </Button>
        </div>
      </div>

      {/* Mobile View */}
      <div className="flex-1 lg:hidden overflow-hidden">
        {mobileView === 'files' && (
          <Card className="h-full bg-slate-900/50 border-slate-800 overflow-hidden flex flex-col">
            <Tabs defaultValue="files" className="flex-1 flex flex-col">
              <TabsList className="bg-slate-800/50 border-b border-slate-700 rounded-none">
                <TabsTrigger value="files" className="flex-1 text-xs">
                  <FolderTree className="w-3 h-3 mr-1" />
                  Files
                </TabsTrigger>
                <TabsTrigger value="git" className="flex-1 text-xs">
                  <GitBranch className="w-3 h-3 mr-1" />
                  Git
                </TabsTrigger>
              </TabsList>
              <TabsContent value="files" className="flex-1 overflow-auto m-0 p-0">
                <FileExplorer activeFile={activeFile} onFileSelect={(file) => {
                  setActiveFile(file);
                  setMobileView('editor');
                }} />
              </TabsContent>
              <TabsContent value="git" className="flex-1 overflow-auto m-0 p-0">
                <GitPanel />
              </TabsContent>
            </Tabs>
          </Card>
        )}

        {mobileView === 'editor' && (
          <Card className="h-full bg-slate-900/50 border-slate-800 overflow-hidden flex flex-col">
            <div className="border-b border-slate-800 px-3 py-2 flex items-center justify-between">
              <div className="flex items-center gap-2">
                <Code2 className="w-3 h-3 text-cyan-400" />
                <span className="text-xs text-white font-mono truncate max-w-[200px]">{activeFile}</span>
              </div>
              <div className="flex items-center gap-1 px-2 py-1 rounded bg-green-500/10 border border-green-500/30">
                <div className="w-1 h-1 rounded-full bg-green-400 pulse-dot" />
                <span className="text-[10px] text-green-400">Auto</span>
              </div>
            </div>
            <CodeEditor code={code} onChange={setCode} />
          </Card>
        )}

        {mobileView === 'terminal' && (
          <Card className="h-full bg-slate-900/50 border-slate-800 overflow-hidden">
            <Terminal />
          </Card>
        )}

        {mobileView === 'ai' && (
          <Card className="h-full bg-slate-900/50 border-slate-800 overflow-hidden flex flex-col">
            <div className="border-b border-slate-800 px-3 py-2 flex items-center gap-2">
              <Sparkles className="w-4 h-4 text-purple-400 heartbeat" />
              <span className="text-sm font-semibold text-white">AI Assistant</span>
            </div>
            <AIAssistant code={code} onCodeUpdate={setCode} />
          </Card>
        )}

        {mobileView === 'sync' && (
          <div className="h-full overflow-y-auto space-y-3 px-1">
            <GitHubSync />
            <CloudflareSync />
          </div>
        )}
      </div>

      {/* Desktop Layout */}
      <div className="flex-1 hidden lg:grid grid-cols-12 gap-4 overflow-hidden">
        {/* Left Sidebar - File Explorer & Git */}
        <div className="col-span-2 flex flex-col gap-4 overflow-hidden">
          <Card className="flex-1 bg-slate-900/50 border-slate-800 overflow-hidden flex flex-col">
            <Tabs defaultValue="files" className="flex-1 flex flex-col">
              <TabsList className="bg-slate-800/50 border-b border-slate-700 rounded-none">
                <TabsTrigger value="files" className="flex-1">
                  <FolderTree className="w-4 h-4 mr-2" />
                  Files
                </TabsTrigger>
                <TabsTrigger value="git" className="flex-1">
                  <GitBranch className="w-4 h-4 mr-2" />
                  Git
                </TabsTrigger>
              </TabsList>
              <TabsContent value="files" className="flex-1 overflow-auto m-0 p-0">
                <FileExplorer activeFile={activeFile} onFileSelect={setActiveFile} />
              </TabsContent>
              <TabsContent value="git" className="flex-1 overflow-auto m-0 p-0">
                <GitPanel />
              </TabsContent>
            </Tabs>
          </Card>
        </div>

        {/* Center - Code Editor */}
        <div className="col-span-7 flex flex-col gap-4 overflow-hidden">
          <Card className="flex-1 bg-slate-900/50 border-slate-800 overflow-hidden flex flex-col">
            <div className="border-b border-slate-800 px-4 py-2 flex items-center justify-between">
              <div className="flex items-center gap-2">
                <Code2 className="w-4 h-4 text-cyan-400" />
                <span className="text-sm text-white font-mono">{activeFile}</span>
              </div>
              <div className="flex items-center gap-2">
                <div className="flex items-center gap-1 px-2 py-1 rounded bg-green-500/10 border border-green-500/30">
                  <div className="w-1.5 h-1.5 rounded-full bg-green-400 pulse-dot" />
                  <span className="text-xs text-green-400">Auto-save</span>
                </div>
              </div>
            </div>
            <CodeEditor code={code} onChange={setCode} />
          </Card>

          {/* Terminal */}
          <Card className="h-48 bg-slate-900/50 border-slate-800 overflow-hidden">
            <Terminal />
          </Card>
        </div>

        {/* Right Sidebar - AI Assistant & Sync */}
        <div className="col-span-3 space-y-4 overflow-hidden">
          <Card className="h-[50%] bg-slate-900/50 border-slate-800 overflow-hidden flex flex-col">
            <div className="border-b border-slate-800 px-4 py-3 flex items-center gap-2">
              <Sparkles className="w-5 h-5 text-purple-400 heartbeat" />
              <span className="text-sm font-semibold text-white">AI Assistant</span>
            </div>
            <AIAssistant code={code} onCodeUpdate={setCode} />
          </Card>
          
          <div className="h-[calc(50%-1rem)] overflow-y-auto space-y-4">
            <GitHubSync />
            <CloudflareSync />
          </div>
        </div>
      </div>
    </div>
  );
}
